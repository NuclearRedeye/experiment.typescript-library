{
  "name": "@joelsummerfield/experiment.typescript-library",
  "version": "1.0.3",
  "description": "An experiment looking into how to make a Typescript Library.",
  "main": "dist/lib/index.js",
  "files": [
    "dist/lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "docs": "typedoc --out ./dist/docs/ --exclude **/*.test.ts ./src/",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joelsummerfield/experiment.typescript-library.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joelsummerfield/experiment.typescript-library/issues"
  },
  "homepage": "https://github.com/joelsummerfield/experiment.typescript-library#readme",
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.18",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.3"
  }
}
